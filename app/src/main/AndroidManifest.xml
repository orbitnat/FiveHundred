<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orbitnat.fivehundred">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.CategoryListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.RecentPhotoListActivity"
            android:label="@string/recent_photo_list"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".ui.activity.ImageViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>